@model IEnumerable<PoraoDosInstrumentos.Models.Comentario>

<div class="form-horizontal">
    <h4>Comentario</h4>
    <hr />
    <div class="form-group">
        <label class="control-label col-md-2">Assunto</label>
        <div class="col-md-10">
            <input type="text" id="Assunto" name="Assunto" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="#" onclick="salvarComentario();" class="btn btn-info">Enviar</a>
        </div>
    </div>
</div>
<input type="hidden" id="idInformacao" value="@ViewBag.Informacao" />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Assunto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Assunto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
